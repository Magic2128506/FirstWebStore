@using FirstWebStore.Infrastructure.Interfaces
@await Html.PartialAsync("Partial/_Slider")

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <partial name="Partial/_LeftSideBar" />
            </div>
            <div class="col-sm-9 padding-right">
                
                @inject IProductData catalog;
                @{
                    var product = catalog.GetProducts().Select(p => new ProductViewModel
                    {
                        ID = p.ID,
                        Name = p.Name,
                        Order = p.Order,
                        ImageUrl = p.ImageUrl,
                        Price = p.Price
                    });
                }
                <partial name="Partial/_FeaturesItems" model="@product"/>
                <partial name="Partial/_CategoryTab" />
                <partial name="Partial/_RecommendedItems" />

            </div>
        </div>
    </div>
</section>
