@model IEnumerable<FirstWebStore.Models.Employee>



<div class="container">
    <table>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.ID</td>
                <td>@employee.FirstName</td>
                <td>@employee.SurName</td>
                <td>@employee.Patronymic</td>
                <td>@employee.Age</td>
                <td>
                    <a asp-action="Details" asp-route-id="@employee.ID">Открыть</a>
                </td>
            </tr>
        }
    </table>
    <a href="~/Home/Index">Домой</a>
    <a href="~/Home/Employees">Список сотрудников</a>
</div>